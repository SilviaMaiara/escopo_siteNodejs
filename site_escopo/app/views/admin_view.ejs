<!DOCTYPE HTML>
<html lang="pt-br">
<head>
	<meta charset="UTF-8">

	<title>Acesso admin</title>
	
	<!-- JQuery -->
	<script src="js/jquery-2.2.1.js"></script>

	<!-- bootstrap - link cdn -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

	<!-- incluindo css -->
	<link href="css/style_admin.css" rel="stylesheet">
</head>

<body>
	<nav class="navbar navbar-default navbar-static-top">
		<div class="container">
			<div class= "row">
				<% if(validation.length > 0){ %>
					<div class="alert alert-danger">
						<strong>Atenção!</strong>
						<ul>
							<% for(var i = 0; i < validation.length; i++){ %>
								<li><%= validation[i].msg %></li>
							<% } %>
						</ul>
					</div>
				<% } %>
					
				<form class="form-inline form-enter" action="/adminArea" method="POST">
					<div class="form-group">
						<label>Usuário</label><br />
						<input type="text" class="form-control" name="user" id="user" placeholder="nome de usuário" autocomplete="off">
					</div>
					<div class="form-group">
						<br/>
						<br />
						<label>Senha</label> <br />
						<input type="password" name="password" id="password" class="form-control" placeholder="Senha">
					</div>
					<br />
					<br />
					<button type="submit" class="btn btn-black">Entrar</button>
				</form>
			</div>                   
		</div>			
	</nav>
</body>
</html>